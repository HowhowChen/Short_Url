<div class="row mt-5">
  <div class="col-12 col-md-8 mx-auto">
    <div class="d-flex justify-content-center mt-3">
      {{#if success}}<h1 class="fw-bold">Success Please Use this Link!</h1>{{/if}}
      {{#if error}}<h1 class="fw-bold">Error Please back to previous page!</h1>{{/if}}
    </div>

    <div class="d-flex justify-content-center mt-3">
      {{#if success}}<h3 class="text-primary fw-bold" id="short-url">{{ copyUrl }}</h3>{{/if}}
      {{#if error}}<h3 class="text-danger fw-bold" id="short-url">{{ errorMsg }}</h3>{{/if}}
    </div>
   
   
    <div class="d-flex justify-content-center mt-3">
      {{#if success}}<button class="btn btn-outline-success" type="button" id="copy-btn">Copy</button>{{/if}}
      {{#if error}}<a href="/"><button class="btn btn-outline-danger " type="button" >back</button></a>{{/if}}
    </div>
  </div>
</div>
